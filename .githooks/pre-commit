#!/bin/bash

# Pre-commit hook to ensure code quality
# Run from the root of the repository

echo "ğŸ” Running pre-commit checks..."

# 1. Format code
echo "ğŸ¨ Formatting code..."
make fmt
if [ $? -ne 0 ]; then
    echo "âŒ Formatting failed. Please check your code."
    exit 1
fi

# 2. Run linting
echo "ğŸ›¡ï¸  Running golangci-lint..."
make lint
if [ $? -ne 0 ]; then
    echo "âŒ Linting failed. Please fix the issues before committing."
    exit 1
fi

# 3. Run aggressive tests
echo "ğŸ§ª Running aggressive tests (race detector + no cache)..."
make test-aggressive
if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Commitment aborted."
    exit 1
fi

echo "âœ… All checks passed! Ready to commit."
exit 0
